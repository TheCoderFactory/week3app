<p id="notice"><%= notice %></p>

<h1>Listing Course Applications</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>User</th>
      <th>Reason for applying</th>
      <th>Prior study</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_applications.each do |course_application| %>
      <tr>
        <td><%= course_application.course %></td>
        <td><%= course_application.user %></td>
        <td><%= course_application.reason_for_applying %></td>
        <td><%= course_application.prior_study %></td>
        <td><%= link_to 'Show', course_application %></td>
        <td><%= link_to 'Edit', edit_course_application_path(course_application) %></td>
        <td><%= link_to 'Destroy', course_application, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

